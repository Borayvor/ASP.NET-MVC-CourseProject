@using EntertainmentSystem.Web.Areas.Forum.ViewModels
@model PostViewModel

<section id="MainContent">
    <div class="container">
        <h1 class="text-left">@Model.Title</h1>
        <hr />
        <div class="es-forum-post-comments container">
            <div class="row" id="forum-post-@Model.Id">
                <div class="col-xs-12 col-sm-2 forum-vote">
                    <div class="well text-center forum-vote-well" data-answer-id="203370">
                        <div class="forum-vote-detail forum-vote-margin">
                            <strong id="vote-count-203370">@Model.Votes</strong>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-10 forum-topic">
                    <div class="es-forum-post-content">
                        <div class="row es-forum-post-row-margin-zero">@Model.Content</div>
                        <hr class="es-forum-hr-in">
                        <div class="row es-forum-post-row-margin-zero">
                            <p class="es-forum-post-info-color">
                                <span>posted</span>
                                <time class="es-forum-post-info-data-color">@Model.CreatedOn</time>
                                at <a href="/Forum/Category/@Model.Category.Id" class="es-forum-post-info-data-color">@Model.Category.Name</a>
                                from <a href="/Users/@Model.Author.Id" class="es-forum-post-info-data-color">@Model.Author.UserName</a>
                            </p>
                        </div>
                    </div>
                    <hr class="es-forum-hr-in">
                    <div class="row es-forum-post-row-margin-zero">
                        @foreach (var tag in Model.Tags)
                        {
                            // TODO: change hrefs
                            <a href="Forum/Tag/@tag.Id" class="label label-default">@tag.Name</a>
                        }
                    </div>
                </div>
            </div>

            <br>
            <h3>Comments</h3>
            <hr />

            @foreach (var answer in Model.Comments)
            {
                @Html.Partial("_PostCommentPartial", answer)
            }

        </div>
    </div>
</section>