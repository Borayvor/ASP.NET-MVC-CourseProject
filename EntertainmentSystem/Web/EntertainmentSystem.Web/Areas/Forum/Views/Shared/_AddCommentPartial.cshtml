@using EntertainmentSystem.Web.Areas.Forum.Controllers
@using EntertainmentSystem.Web.Areas.Forum.ViewModels
@model PostViewModel

@if (Request.IsAuthenticated)
{
    <div id="es-forum-comment-add-@Model.Id" class="es-forum-comment-add collapse">
        <hr class="es-forum-hr-in">

        @using (Ajax.BeginForm<CommentController>(c => c.Create()))
        {
            @Html.AntiForgeryToken()

            <div class="row es-forum-comment-add-head">
                <h4 class="pull-left">Add Comment</h4>
                <button type="button" class="es-forum-comment-add-close btn btn-danger pull-right" data-model-id="@Model.Id" data-target="#es-forum-comment-add" aria-expanded="true" aria-controls="es-forum-comment-add">
                    <span class="fa fa-close"></span>
                </button>
            </div>
            <div class="row">
                @Html.EditorFor(m => m.Content)
            </div>
            <div class="row es-forum-comment-add-footer">
                <button type="submit" class="es-forum-comment-add-save btn btn-success pull-right" data-model-id="@Model.Id" data-target="#es-forum-comment-add" aria-expanded="true" aria-controls="es-forum-comment-add">
                    <span>Save</span>
                </button>
            </div>

        }

    </div>
}
