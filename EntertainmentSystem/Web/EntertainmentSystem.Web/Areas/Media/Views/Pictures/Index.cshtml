@using EntertainmentSystem.Web.Areas.Media.Controllers
@using EntertainmentSystem.Web.Areas.Media.Controllers.Picture
@using EntertainmentSystem.Web.Areas.Media.ViewModels
@model MediaPageViewModel<MediaBasePictureViewModel>

@{
    ViewBag.Title = HtmlConstants.MediaPicturesControllerName;
}

<section id="es-picture-home">
    <h2 class="text-center">@ViewBag.Title</h2>
    @Html.Partial("_SearchForm")
    <div class="row">
        @if (Model.MediaFiles != null)
        {
            if (Model.MediaFiles.Count() > 0)
            {
                foreach (var item in Model.MediaFiles)
                {
                    @(Html.Action<MediaPartialController>(c => c.GetFromViewModel(item, "_PicturePartial", GlobalConstants.MediaHomeCacheDuration)))
                }
            }
        }
    </div>
    <div class="row">
        <div class="text-center">
            <nav>
                <ul class="pagination pagination-sm">
                    @if (Model.CurrentPage != 1)
                    {
                        <li>
                            <a href="@(Url.Action<PicturesController>(c => c.Index(Model.CurrentPage - 1, Model.Search, Model.FilterByCollection, Model.FilterByCategory)))" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    }

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        var className = string.Empty;

                        if (Model.CurrentPage == i)
                        {
                            className = "active";
                        }

                        <li class="@className">
                            <a href="@(Url.Action<PicturesController>(c => c.Index(i, Model.Search, Model.FilterByCollection, Model.FilterByCategory)))">@(i)</a>
                        </li>
                    }

                    @if (Model.CurrentPage != Model.TotalPages)
                    {
                        <li>
                            <a href="@(Url.Action<PicturesController>(c => c.Index(@Model.CurrentPage + 1, Model.Search, Model.FilterByCollection, Model.FilterByCategory)))" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
</section>
