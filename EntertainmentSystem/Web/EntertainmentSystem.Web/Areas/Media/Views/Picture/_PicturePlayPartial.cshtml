@using EntertainmentSystem.Web.Areas.Media.ViewModels
@model MediaDetailsViewModel

<div class="es-video-player">
    <div class="es-player-container es-flex-col es-justify-center">
        <img src="@Model.ContentUrl" />        
        <div class="es-player-controls es-top-bar">
            <div class="es-player-volume-control">
                <div class="es-volume es-volume-down">
                    <em class="fa fa-minus"></em>
                </div>
                <div class="progress es-volume-bar-container">
                    <div class="progress-bar es-volume-bar" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 50%">
                        <span class="sr-only"></span>
                    </div>
                </div>
                <div class="es-volume es-volume-up">
                    <em class="fa fa-plus"></em>
                </div>
            </div>
            <div class="es-close-icon">
                <em class="fa fa-close"></em>
            </div>
        </div>       
    </div>
</div>


