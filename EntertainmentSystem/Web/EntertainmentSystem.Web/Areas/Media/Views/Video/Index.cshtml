@using EntertainmentSystem.Common.Constants
@using EntertainmentSystem.Web.Areas.Media.Controllers
@using System.Web.Mvc.Expressions
@using EntertainmentSystem.Web.Areas.Media.ViewModels
@model IEnumerable<MediaBaseViewModel>

@{
    ViewBag.Title = "Videos";
}

<section id="forum-home">
    <h2 class="text-center">@ViewBag.Title</h2>
    @(Html.Partial("_Search"))
    <div class="row">
        @if (Model != null)
        {
            if (Model.Count() > 0)
            {
                foreach (var video in Model)
                {
                    @(Html.Action<MediaPartialController>(c => c.GetFromViewModel(video, "_VideoPartial", GlobalConstants.CacheMediaHomeDuration)))
                }
            }
        }
    </div>
</section>
