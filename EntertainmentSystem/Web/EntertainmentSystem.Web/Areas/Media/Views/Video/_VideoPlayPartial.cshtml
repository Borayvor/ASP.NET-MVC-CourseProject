@using EntertainmentSystem.Web.Areas.Media.ViewModels
@model MediaDetailsViewModel

<div id="es-video-container" class="es-video-player">    
    <div class="es-player-container es-flex-col es-justify-center">
        <video id="es-video-element" preload="auto" src="@Model.ContentUrl"></video>
        <div class="es-video-paused-overlay"></div>
        <div class="es-giant-resume-icon">           
            <em class="fa fa-play"></em>
        </div>
        <div class="es-player-controls es-top-bar">           
            <div class="es-close-icon">
                <span>x</span>
            </div>
        </div>
        <div class="es-player-controls es-bottom-bar form-inline">
            <div class="es-play-pause-icon">
                <em class="fa fa-play"></em>
            </div>           
            <div class="progress es-progress-bar-container">
                <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%">
                    <span class="sr-only">60% Complete (warning)</span>
                </div>
            </div>           
            <div class="time-remaining">11.50</div>
        </div>
    </div>
</div>



