@using EntertainmentSystem.Web.Infrastructure.HtmlHelpers

<div id="mediaContentModalWindows">

    @using (Ajax.BeginForm("action", "controller", new { area = string.Empty }, new AjaxOptions() { HttpMethod = "POST" }, new { hidden = "hidden", id = "hiddenAjaxPostForm" }))
    {
        @Html.AntiForgeryToken()
    }

    <div id="create-media-content">
        <div id="modalMisicWindowMain" class="modal">
            <div class="modal-dialog text-center">
                <div class="modal-content">
                    <div class="modal-header">
                        <button class="btn btn-danger pull-right" data-dismiss="modal"><i class="fa fa-times fa-1x"></i></button>
                        <h4><i class="fa fa-upload fa-2x"> Upload</i></h4>
                    </div>
                    <div class="modal-body">
                        @Html.FontAwesomeButton("Choose File", "upload", new { @class = "chooseUploadMusicBtn" })
                        @Html.TextBox("File", "", new { name = "File", type = "file", @class = "inputUploadMusicBtn display-none" })
                        @Html.FontAwesomeButton("Send", "send", new { data_dismiss = "modal", @class = "col-md-offset-2 btn btn-success sendUploadMusicBtn" })
                    </div>
                </div>
            </div>
        </div>

        <div id="modalPictureWindowMain" class="modal">
            <div class="modal-dialog text-center">
                <div class="modal-content">
                    <div class="modal-header">
                        <button class="btn btn-danger pull-right" data-dismiss="modal"><i class="fa fa-times fa-1x"></i></button>
                        <h4><i class="fa fa-upload fa-2x"> Upload</i></h4>
                    </div>
                    <div class="modal-body">
                        @Html.FontAwesomeButton("Choose File", "upload", new { @class = "chooseUploadPictureBtn" })
                        @Html.TextBox("File", "", new { name = "File", type = "file", @class = "inputUploadPictureBtn display-none" })
                        @Html.FontAwesomeButton("Send", "send", new { data_dismiss = "modal", @class = "col-md-offset-2 btn btn-success sendUploadPictureBtn" })
                    </div>
                </div>
            </div>
        </div>

        <div id="modalVideoWindowMain" class="modal">
            <div class="modal-dialog text-center">
                <div class="modal-content">
                    <div class="modal-header">
                        <button class="btn btn-danger pull-right" data-dismiss="modal"><i class="fa fa-times fa-1x"></i></button>
                        <h4><i class="fa fa-upload fa-2x"> Upload</i></h4>
                    </div>
                    <div class="modal-body">
                        @Html.FontAwesomeButton("Choose File", "upload", new { @class = "chooseUploadVideoBtn" })
                        @Html.TextBox("File", "", new { name = "File", type = "file", @class = "inputUploadVideoBtn display-none" })
                        @Html.FontAwesomeButton("Send", "send", new { data_dismiss = "modal", @class = "col-md-offset-2 btn btn-success sendUploadVideoBtn" })
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>