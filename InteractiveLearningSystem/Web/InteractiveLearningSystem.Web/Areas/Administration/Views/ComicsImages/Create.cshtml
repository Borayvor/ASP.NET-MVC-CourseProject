@using InteractiveLearningSystem.Web.Areas.Administration.Models
@model IQueryable<ComicsImageInputModel>

@using (Html.BeginForm("Create", "ComicsImages", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Images", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" id="Images" name="comicsImages" multiple="multiple" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Upload" class="btn btn-default" />
            </div>
        </div>
    </div>
}
