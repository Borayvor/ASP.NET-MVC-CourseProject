@using InteractiveLearningSystem.Web.Areas.Administration.Models
@model IQueryable<BulgarianQuestionViewModel>

@{
    ViewBag.Title = "Questions";
}
<h2>@ViewBag.Title</h2>

<div>
    @(Html.Kendo().Grid<BulgarianQuestionViewModel>()
            .Name("QuestionsGrid")
            .Columns(columns =>
            {
                columns.Bound(c => c.Id);
                columns.Bound(c => c.Word);
                columns.Bound(c => c.Content);
                columns.Bound(c => c.CreatedOn).Format("{0:yyyy-MM-dd HH:mm}");
                columns.Bound(c => c.ModifiedOn).Format("{0:yyyy-MM-dd HH:mm}");
                columns.Command(command => { command.Edit(); command.Destroy(); }).Width(180);
            })
            .ToolBar(toolbar =>
            {
                toolbar.Create();
            })
            .ColumnMenu()
            .Editable(editable => editable.Mode(GridEditMode.PopUp))
            .Scrollable()
            .Groupable()
            .Sortable()
            .Pageable(pageable => pageable
                .Refresh(true)
                .PageSizes(true)
                .ButtonCount(5))
            .DataSource(dataSource => dataSource
                .Ajax()
                .ServerOperation(false)
                .Events(events => events.Error("error_handler"))
                .PageSize(10)
                .Model(model => model.Id(m => m.Id))
                .Read(read => read.Action("BulgarianQuestions_Read", "BulgarianQuestions"))
                .Create(update => update.Action("Create", "BulgarianQuestions"))
                .Update(update => update.Action("Update", "BulgarianQuestions"))
                .Destroy(update => update.Action("Destroy", "BulgarianQuestions"))
            )
    )
</div>

@section scripts{
    <script type="text/javascript">
        function error_handler(e) {
            if (e.errors) {
                var message = "Errors:\n";
                $.each(e.errors, function (key, value) {
                    if ('errors' in value) {
                        $.each(value.errors, function () {
                            message += this + "\n";
                        });
                    }
                });
                alert(message);
            }
        }
    </script>
}

